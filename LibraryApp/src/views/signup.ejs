    <div class="title library">
            <h1>Sign Up</h1>
    </div>
        <div class="jumbotron content">
           <form class="was-validated email login" onsubmit="return validatePassword(this)" >
            <label for="">First Name:</label>
            <input type="text" placeholder="First Name" required>
            <br>
            <label for="">Last Name:</label>
            <input type="text" placeholder="Last Name" required>
            <br>
            <label >DOB:</label> 
            <input type="date" name="bday"   required>
            <br>
            <label>  Gender:</label>
            <input type="radio" id="radio1" name="optradio" value="option1"  checked >Male                        
            <input type="radio" id="radio2" name="optradio" value="option2" >Female
            <br>



            <label>Languages Known:</label>
            <input type="checkbox"  checked>English
            <br>
            <input type="checkbox" style="margin-inline-start: 20%;">Hindi
            <br>
            <input type="checkbox" style="margin-inline-start: 20%;">Malayalam
            <br>

            <label for=""  class="align-self-start">Address:</label>
            <textarea placeholder="Address" required></textarea>
            <br>
            <label for="">Country</label>
            <input type="text" placeholder="Country">
            <br>
            <label for="">Phone:</label>
            <input type="text" name="phone">
            <br>
            <label for="text" class="login">Username:</label>
            <input type="text" placeholder="Enter user name" class="username" name="email" id="email" required>
            <br>
            <label for="text" class="login">Password:</label>
            <input type="text" placeholder="Enter password" name="password" required>
            <br>
            <label for="text" class="login">Confirm Password:</label>
            <input type="text" placeholder="Re-enter password" name="password1" required>
            <br>
            <input type="checkbox" required>I agree
            <br>
            <button class="button">Submit</button>
           </form>
        </div>
</body>
</html>